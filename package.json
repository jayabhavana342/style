{
  "name": "styledot",
  "version": "0.0.1",
  "description": "23andMe styleguide",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run std --silent",
    "build": "rollup -c config/prod.js",
    "build:dev": "rollup -c config/dev.js -w",
    "version": "npm run build && git add -A .",
    "postversion": "git push --tags origin HEAD",
    "browse": "browser-sync start --s --ss build --index html/index-dev.html --files html/**/*.html,build/**/*.js --no-notify",
    "start": "npm-run-all --parallel build:dev browse build-sg-css build-ds-css watch-sg-css watch-ds-css",
    "test": "npm run build:dev",
    "test-jest": "rollup -c rollup.test.js",
    "build-sg-css": "node-sass src/guide/scss/main.scss build/css/guide_main.css",
    "watch-sg-css": "node-sass src/guide/scss/main.scss build/css/guide_main.css --watch --recursive",
    "build-ds-css": "node-sass src/design_system/scss/main.scss dist/ttam-design-system.css",
    "watch-ds-css": "node-sass src/design_system/scss/main.scss dist/ttam-design-system.css --watch --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/23andMe/Style.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/23andMe/Style/issues"
  },
  "homepage": "https://github.com/23andMe/Style#readme",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6.0.0"
  },
  "dependencies": {
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "browser-sync": "2.23.6",
    "jest": "^23.4.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "4.1.2",
    "react-syntax-highlighter": "^8.0.1",
    "rollup": "0.56.5",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "9.0.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-globals": "1.1.0",
    "rollup-plugin-node-resolve": "3.2.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "3.0.0",
    "rollup-watch": "4.3.1",
    "snazzy": "7.1.1",
    "standard": "11.0.0",
    "standardx": "^2.1.0"
  },
  "standardx": {
    "ignore": [
      "build"
    ]
  },
  "eslintConfig": {
    "rules": {
      "strict": 0,
      "indent": [
        "error",
        4
      ]
    }
  }
}
